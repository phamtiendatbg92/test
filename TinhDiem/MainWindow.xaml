<Window x:Class="TinhDiem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TinhDiem"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="button" Content="Lay Du Lieu" HorizontalAlignment="Left" 
                Margin="122,152,0,0" VerticalAlignment="Top" 
                Width="76" Click="button_Click"
                />
        <ProgressBar HorizontalAlignment="Left" Height="44"
                     Maximum="100"
                     x:Name="progressBar"
                     VerticalAlignment="Top" Width="497" Margin="10,208,0,0"/>
        <Button x:Name="calculateBtn" Content="Tinh Toan" HorizontalAlignment="Left" 
            Margin="280,152,0,0" VerticalAlignment="Top" 
            Width="76" Click="tinhToanbutton_Click"
                />

    </Grid>
</Window>
